<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nutrity">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Nutrity"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nutrity">
        <activity
            android:name=".ui.forgot_pass.Forgot_pass_Activity"
            android:label="Olvidé mi contraseña"
            android:exported="false" />
        <activity
            android:name=".ui.signup.SignupActivity"
            android:exported="false"
            android:label="Registrarse"
            android:theme="@style/Theme.Nutrity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Nutrity.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Nutrity.NoActionBar" />
    </application>

</manifest>