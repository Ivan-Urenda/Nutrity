<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.recetas.RecetasFragment">

    <SearchView
        android:id="@+id/SearchRecetas"
        android:layout_width="359dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/searchview_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Titulo"
        android:layout_width="363dp"
        android:layout_height="68dp"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-medium"
        android:text="Recetas para cada comida del dÃ­a"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SearchRecetas" />

    <ImageButton
        android:id="@+id/CenasBtn"
        android:layout_width="173dp"
        android:layout_height="180dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/cena"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/almuerzosBtn"
        app:layout_constraintVertical_bias="0.123" />

    <ImageButton
        android:id="@+id/almuerzosBtn"
        android:layout_width="173dp"
        android:layout_height="180dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/almuerzo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Titulo"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/desayunosBtn"
        android:layout_width="173dp"
        android:layout_height="180dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/desayuno"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Titulo"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/comidasBtn"
        android:layout_width="173dp"
        android:layout_height="180dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/comida"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desayunosBtn"
        app:layout_constraintVertical_bias="0.123" />

</androidx.constraintlayout.widget.ConstraintLayout>